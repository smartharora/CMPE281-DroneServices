    <option>DJI</option>
    <option>MXB</option>
    <option>Nike</option>
    <option>SJSU</option>
  </select>
</div>

<div class="col p-3 m-2" style="background-color: rgba(7, 113, 243, 0.896); border-radius: 10px;">
  <label for="Status" class="form-label">Status</label>
  <select class="form-select" id="Status" name="status">
    <option>All</option>
    <option>Available</option>
    <option>Not Available</option>
  </select>
</div>
</div>