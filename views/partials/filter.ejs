<div id="filter" class="row w-100 p-3"
style="color:white; background-color: rgba(69, 147, 243, 0.896); border-radius: 10px;">
<div class="col p-3 m-2" style="background-color: rgba(7, 113, 243, 0.896); border-radius: 10px;">
  <label for="service" class="form-label">Service</label>
  <select class="form-select" id="service" name="service">
    <option>Data Collection</option>
    <option>Payload</option>
    <option>Surveillance</option>
  </select>
</div>
<div class="col p-3 m-2" style="background-color: rgba(7, 113, 243, 0.896); border-radius: 10px;">
  <label for="Equipment" class="form-label">Equipment</label>
  <select class="form-select" id="Equipment" name="Equipment">
    <option>Camera</option>
    <option>Thermal Camera</option>
    <option>LiDAR</option>
    <option>Pesticide</option>
  </select>
</div>
<div class="col p-3 m-2" style="background-color: rgba(7, 113, 243, 0.896); border-radius: 10px;">
  <label for="date_time" class="form-label">Date & Time</label>
  <input type="date" class="form-select" id="date_time" name="date_time">
</div>
